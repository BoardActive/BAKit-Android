<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.boardactive.sdk.android.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <TextView
            android:text="Waiting for OneSignal..."
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/debug_view"/>

        <Button
            android:id="@+id/get_ids_available_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/debug_view"
            android:text="Get Player ID"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/send_notification_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/get_ids_available_button"
            android:text="Send PN w/ Big Picture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <!--<Switch-->
            <!--android:id="@+id/set_subscription_switch"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_below="@id/send_notification_button"-->
            <!--android:text="Set Subscription"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_marginLeft="220dp"-->
            <!--android:checked="true"/>-->

        <ScrollView
            android:id="@+id/SCROLLER_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/send_notification_button"
            android:scrollbars="vertical"
            android:fillViewport="true">

        <TextView
            android:id="@+id/bglocation"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:text=""
            android:scrollbars = "vertical"
            />

        </ScrollView>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>