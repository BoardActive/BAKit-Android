<resources>

    <!-- Base application theme. -->
    <style name="AdDropTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/addropPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">#eebfbfbf</item>
    </style>

    <style name="AdDropTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AdDropTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Category" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="Description" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14dp</item>
        <item name="android:ellipsize">none</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
    </style>


</resources>
